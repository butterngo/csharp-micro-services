@{
    Layout = null;
}
@model LoginViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="https://www.c-sharp.vn/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>C-Sharp Viet Nam</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/idsr4/login.css" crossorigin="anonymous">
</head>
<body>
    <div class="bg-image">
        <div class="wrapper fadeInDown">
            <div id="formContent">
                <div class="fadeIn first">
                    <img src="https://www.c-sharp.vn//img/logo.png" id="icon" alt="User Icon" />
                </div>
                @using (Html.BeginForm("Login", "Account"))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.ReturnUrl)
                    @Html.TextBoxFor(x => x.Username, new
                    {
                        @placeholder = "Email address",
                        @class = "fadeIn second",
                        @id = "login"
                    })
                    <div class="help-block">
                        @Html.ValidationMessageFor(x => x.Username, string.Empty, new
                        {
                           @class = "cls-danger",
                        })
                    </div>
                    @Html.PasswordFor(x => x.Password, new
                    {
                       @placeholder = "Password",
                       @class = "fadeIn third",
                       @id = "password"
                    })
                    <div class="help-block">
                        @Html.ValidationMessageFor(x => x.Password, string.Empty, new
                        {
                           @class = "cls-danger",
                        })
                    </div>
                    <input type="submit" class="fadeIn fourth" value="Log In">
                }
                <div id="formFooter">
                    <a class="underlineHover" href="#">Forgot Password?</a>
                </div>

            </div>
        </div>
    </div>
    <partial name="_Footer" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="/vendor/jquery.validate.min.js"></script>
    <script src="/vendor/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>


